<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Profile</title>
<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: url("../images/green background.jpg") no-repeat center center fixed;
        background-size: cover;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 100vh;
        padding-top: 50px;
    }

    .container {
        background: rgb(255, 255, 255);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 30px 40px;
        width: 80%;
        max-width: 800px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.25);
        position: relative;
    }

    h1, h2 {
        color: #000;
        text-align: center;
        margin-bottom: 20px;
    }

    p, li {
        color: #000;
        font-size: 16px;
    }

    .detail {
        margin-bottom: 10px;
    }

    .cgpa {
        font-weight: bold;
        font-size: 18px;
        margin-top: 15px;
        text-align: center;
    }

    ul {
        list-style-type: none;
        padding-left: 0;
    }

    li {
        margin-bottom: 8px;
        padding: 10px;
        background: rgba(0, 128, 0, 0.2);
        border-radius: 12px;
        font-weight: bold;
    }

    .btn {
        display: inline-block;
        padding: 10px 25px;
        margin: 10px 5px 0 5px;
        background: rgba(0, 128, 0, 0.5);
        color: #000;
        text-decoration: none;
        border-radius: 12px;
        font-weight: bold;
        text-align: center;
        backdrop-filter: blur(5px);
        transition: 0.3s ease;
    }

    .btn:hover {
        background: rgba(0, 128, 0, 0.7);
        color: #fff;
    }

    .top-buttons {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }
    .semester-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(0, 128, 0, 0.2);
    border-radius: 12px;
    padding: 10px 15px;
    margin-bottom: 10px;
    font-weight: bold;
    transition: 0.3s;
}

.semester-item:hover {
    background: rgba(0, 128, 0, 0.3);
}

.delete-form {
    margin: 0;
}

.delete-btn {
    background: rgba(255, 0, 0, 0.6);
    color: white;
    border: none;
    border-radius: 10px;
    padding: 8px 18px;
    cursor: pointer;
    font-weight: bold;
    transition: 0.3s;
}

.delete-btn:hover {
    background: rgba(255, 0, 0, 0.8);
    transform: scale(1.05);
}



</style>
</head>
<body>
    <div class="container">
        <div class="top-buttons">
            <a href="/Home" class="btn">Back</a>
            <a href="/logout" class="btn">Logout</a>
        </div>

        <h1>Your Details</h1>
        <p class="detail">Name: <%= name %></p>
        <p class="detail">Roll No: <%= RollNo %></p>
        <p class="detail">Email: <%= email %></p>
        <p class="cgpa">CGPA: <%= CGPA %></p>

        <h2>SGPA for each semester</h2>
<ul>
  <% allSemesters.forEach(s => { %>
    <li class="semester-item">
      <span>Semester <%= s.semester %>: <%= (s.sgpa || 0).toFixed(2) %></span>
      <form action="/deleteSemester" method="POST" class="delete-form">
        <input type="hidden" name="semester" value="<%= s.semester %>">
        <button type="submit" class="btn delete-btn">Delete</button>
      </form>
    </li>
  <% }) %>
</ul>

    </div>
</body>
</html>
